@model List<CoDelivery.Web.Models.RecipeModel>

@{
    ViewBag.Title = "Receitas";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>Receitas</h2>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <td class="col-md-10">Receitas</td>
                <td class="col-md-2">Ações</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var item in Model)
                {

                    <td class="col-md-10">
                        <h4>@item.Name</h4>
                    </td>
                    <td class="col-md-2">
                        @using (Html.BeginForm("Run","Recipe", FormMethod.Post))
                        {
                            @Html.Hidden("idRecipe", @item.Id)
                            <button type="submit" class="btn btn-success" title="rodar"><i class="glyphicon glyphicon-play"></i></button>
                        }
                            <a href="/recipe/Delete/@item.Id" class="btn btn-danger" title="Excluir">
                            <i class="glyphicon glyphicon-remove"></i>
                        </a>
                    </td>

                }
            </tr>
        </tbody>
    </table>

    <div class="panel-footer text-right">
        <a href="/Dashboard" class="btn btn-default">Voltar</a>
        <a href="/Recipe/Create" class="btn btn-primary">Criar nova</a>
    </div>
</div>